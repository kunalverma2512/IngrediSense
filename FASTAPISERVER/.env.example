# ====================================
# FastAPI Server Environment Variables
# Health Agent AI Server
# ====================================

# =================================
# Google AI Configuration
# =================================

# REQUIRED: Get your API key from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =================================
# Gemini Model Configuration
# =================================

# Model version to use
# Options: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
GEMINI_MODEL=gemini-2.0-flash-exp

# Temperature for model responses (0.0-1.0)
# Lower = more deterministic, Higher = more creative
GEMINI_TEMPERATURE=0.1

# Maximum tokens in response
GEMINI_MAX_TOKENS=8192

# =================================
# Server Configuration
# =================================

# Host address (0.0.0.0 allows external connections)
HOST=0.0.0.0

# Port to run the server on
PORT=8000

# Debug mode (True for development, False for production)
DEBUG=True

# =================================
# Tesseract OCR Configuration
# =================================

# Path to Tesseract executable (auto-detected on macOS with Homebrew)
# Uncomment and set if Tesseract is not in PATH
# macOS (Homebrew): /opt/homebrew/bin/tesseract
# Linux: /usr/bin/tesseract
# Windows: C:\\Program Files\\Tesseract-OCR\\tesseract.exe
# TESSERACT_CMD=/opt/homebrew/bin/tesseract

# OCR language (default: eng for English)
TESSERACT_LANG=eng

# =================================
# CORS Configuration
# =================================

# Allowed CORS origins (comma-separated, no spaces)
# Use * for development to allow all origins (NOT recommended for production)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
CORS_ORIGINS=*

# =================================
# Logging Configuration
# =================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# Maximum log file size (bytes)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =================================
# Upload Configuration
# =================================

# Directory for temporary uploads
UPLOAD_DIR=uploads

# Maximum file upload size (bytes)
# Default: 10485760 (10MB)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# =================================
# Rate Limiting (optional)
# =================================

# Uncomment to enable rate limiting
# MAX_REQUESTS_PER_MINUTE=60
# MAX_REQUESTS_PER_HOUR=1000

# =================================
# Cache Configuration (optional)
# =================================

# Enable caching for ingredient lookups
# ENABLE_CACHE=True
# CACHE_TTL=3600

# =================================
# Production Settings
# =================================
# Uncomment these when deploying to production

# DEBUG=False
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://your-frontend-domain.com
# MAX_FILE_SIZE=5242880

# =================================
# Deployment Platform Specific
# =================================

# Render.com
# PORT will be set automatically by Render via $PORT
# Set GOOGLE_API_KEY in Render dashboard

# Railway
# PORT will be set automatically by Railway
# Set GOOGLE_API_KEY in Railway dashboard

# Docker
# Set all environment variables in docker-compose.yml or docker run command

# =================================
# Notes
# =================================
#
# 1. Never commit .env file with real credentials
# 2. Use .env.example as a template
# 3. For production, store secrets securely (e.g., platform dashboard)
# 4. Restart server after changing environment variables
# 5. Ensure Tesseract is installed and accessible
#
