# ====================================
# Node Server Environment Variables
# Authentication & User Management
# ====================================

# =================================
# Server Configuration
# =================================

# Port to run the server on
PORT=8080

# Node environment (development, production, test)
NODE_ENV=development

# =================================
# Database Configuration
# =================================

# MongoDB connection string
# Local MongoDB:
MONGODB_URI=mongodb://localhost:27017/ingredisense

# MongoDB Atlas (Cloud - Recommended for production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ingredisense?retryWrites=true&w=majority

# =================================
# JWT Configuration
# =================================

# IMPORTANT: Change these secrets in production!
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# JWT secret for access tokens (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production-abc123xyz789

# Access token expiration time
# Options: 1h, 2h, 24h, 7d, etc.
JWT_EXPIRE=1h

# JWT secret for refresh tokens (min 32 characters, DIFFERENT from JWT_SECRET)
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-min-32-chars-change-in-production-xyz789abc123

# Refresh token expiration time
JWT_REFRESH_EXPIRE=7d

# =================================
# Password Hashing
# =================================

# bcrypt salt rounds (higher = more secure, but slower)
# Recommended: 10-12 for production
BCRYPT_ROUNDS=12

# =================================
# CORS Configuration
# =================================

# Frontend URL for CORS
# Development:
FRONTEND_URL=http://localhost:5173

# Production (update when deploying):
# FRONTEND_URL=https://your-frontend-domain.com

# Multiple origins (comma-separated):
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-domain.com

# =================================
# Email Configuration (optional)
# =================================
# Uncomment if implementing email verification

# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-specific-password
# EMAIL_FROM=noreply@ingredisense.com

# =================================
# Rate Limiting (optional)
# =================================
# Uncomment to enable rate limiting

# MAX_REQUESTS_PER_WINDOW=100
# RATE_LIMIT_WINDOW_MS=900000

# =================================
# Session Configuration (optional)
# =================================
# Uncomment if using express-session

# SESSION_SECRET=your-session-secret-min-32-chars
# SESSION_MAX_AGE=86400000

# =================================
# Logging
# =================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable console logging
CONSOLE_LOGGING=true

# =================================
# API Keys (optional)
# =================================
# Add any third-party API keys here

# OPENAI_API_KEY=your-openai-api-key
# GOOGLE_VISION_API_KEY=your-google-vision-api-key
# SENDGRID_API_KEY=your-sendgrid-api-key

# =================================
# Production Settings
# =================================
# Uncomment and update these when deploying to production

# NODE_ENV=production
# JWT_EXPIRE=15m
# BCRYPT_ROUNDS=12
# FRONTEND_URL=https://your-frontend-domain.com
# CONSOLE_LOGGING=false

# =================================
# Deployment Platform Specific
# =================================

# Railway / Render
# PORT is automatically set by the platform
# Set other variables in platform dashboard

# MongoDB Atlas
# Get connection string from MongoDB Atlas dashboard
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# =================================
# Notes
# =================================
#
# 1. NEVER commit .env file with real credentials
# 2. Generate secure random secrets for production
# 3. Use environment-specific .env files (.env.development, .env.production)
# 4. Store production secrets in platform dashboard (Railway, Render, etc.)
# 5. Restart server after changing environment variables
# 6. JWT secrets must be at least 32 characters
# 7. Use strong, unique secrets for JWT_SECRET and JWT_REFRESH_SECRET
#
# Generate secure secret:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
