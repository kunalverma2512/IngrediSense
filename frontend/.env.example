# ====================================
# Frontend Environment Variables
# AI Health Ingredient Copilot
# ====================================

# =================================
# API Configuration
# =================================

# Node.js Authentication & Profile Server
# Default: http://localhost:8080/api
# Production: Update to your deployed Node server URL
VITE_API_BASE_URL=http://localhost:8080/api

# FastAPI Health Analysis Server
# Default: http://localhost:8000/api/v1
# Production: Update to your deployed FastAPI server URL
VITE_FASTAPI_BASE_URL=http://localhost:8000/api/v1

# =================================
# App Configuration
# =================================

# Application name displayed in UI
VITE_APP_NAME=AI Health Ingredient Copilot

# Application version
VITE_APP_VERSION=1.0.0

# Application description
VITE_APP_DESCRIPTION=AI-powered food ingredient analysis platform

# =================================
# Feature Flags
# =================================

# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (shows additional logging)
VITE_ENABLE_DEBUG=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# =================================
# UI Configuration
# =================================

# Maximum file size for image uploads (in bytes)
# Default: 10485760 (10MB)
VITE_MAX_FILE_SIZE=10485760

# Supported image formats (comma-separated)
VITE_SUPPORTED_FORMATS=image/jpeg,image/png,image/webp

# Default theme (light/dark)
VITE_DEFAULT_THEME=light

# =================================
# Production Environment
# =================================
# Uncomment and update these when deploying

# VITE_API_BASE_URL=https://your-node-api.onrender.com/api
# VITE_FASTAPI_BASE_URL=https://your-fastapi-server.onrender.com/api/v1
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_DEBUG=false

# =================================
# Notes
# =================================
# 
# 1. All Vite environment variables MUST start with VITE_
# 2. After changing .env, restart the dev server
# 3. Never commit .env file with real credentials
# 4. Access in code: import.meta.env.VITE_VARIABLE_NAME
# 5. For production, set these in your hosting platform's dashboard
#
